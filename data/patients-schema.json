{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"title": "Patients data schema",
	"description": "This is the schema for patients.json to be used with validator",
	"required": [
		"modified",
		"total",
		"data"
	],
	"properties": {
		"modified": {
			"type": "string"
		},
		"total": {
			"type": "integer"
		},
		"data": {
			"additionalProperties": false,
			"patternProperties": {
				"^[0-9]+$": {
					"type": "object",
					"description": "An explanation about the purpose of this instance.",
					"default": null,
					"examples": [
						{
							"positiveDate": "2020-03-16",
							"dischargeDate": "2020-03-30",
							"status": "positive",
							"age": 58,
							"residence": "Hà Nội",
							"nationality": "Việt Nam",
							"description": "nam, 58 tuổi ở Đông Anh, Hà Nội. Bệnh nhân từ Anh về Việt Nam ngày 23/03/2020 trên chuyến bay mang số hiệu VN0054.",
							"source": ["GB"],
							"flights": ["VN0054"],
							"treatmentLocation": "Hà Nội",
							"gender": "male"
						}
					],
					"required": [
						"positiveDate",
						"gender",
						"age",
						"treatmentLocation",
						"residence",
						"nationality",
						"status",
						"source",
						"description"
					],
					"properties": {
						"positiveDate": {
							"type": "string",
							"description": "Ngày được công bố dương tính",
							"default": "",
							"examples": ["2020-03-28"]
						},
						"dischargeDate": {
							"type": "string",
							"description": "Ngày được công bố khỏi bệnh",
							"default": "",
							"examples": ["2020-03-28"]
						},
						"gender": {
							"type": "string",
							"description": "Giới tính",
							"enum": ["male", "female", ""]
						},
						"age": {
							"type": "number",
							"description": "Tuổi",
							"default": -1,
							"examples": [58, 0.25]
						},
						"treatmentLocation": {
							"type": "string",
							"description": "Tỉnh / thành nơi chữa bệnh.",
							"default": "",
							"examples": ["Hà Nội"]
						},
						"residence": {
							"type": "string",
							"description": "Tỉnh / thành nơi cư trú",
							"default": "",
							"examples": ["Hà Nội"]
						},
						"nationality": {
							"type": "string",
							"description": "Quốc tịch",
							"default": "",
							"examples": ["Việt Nam"]
						},
						"status": {
							"type": "string",
							"description": "Tình trạng",
							"enum": ["positive", "negative", "deceased"]
						},
						"flights": {
							"type": ["array", "null"],
							"description": "Danh sách các chuyến bay",
							"default": null,
							"items": {
								"type": "string",
								"description": "Mã chuyến bay",
								"default": "",
								"examples": ["VN0054"]
							}
						},
						"source": {
							"type": "array",
							"description": "Nguồn lây nhiễm",
							"items": {
								"type": "string",
								"description": "Mã bệnh nhân, mã quốc gia hoặc nguồn lây",
								"default": "",
								"examples": ["GB", "17", "BVBM"]
							}
						},
						"description": {
							"type": "string",
							"description": "Ghi chú, mô tả về bệnh nhân.",
							"default": "",
							"examples": [
								"nam, 58 tuổi ở Đông Anh, Hà Nội. Bệnh nhân từ Anh về Việt Nam ngày 23/03/2020 trên chuyến bay mang số hiệu VN0054."
							]
						}
					}
				}
			}
		}
	}
}
